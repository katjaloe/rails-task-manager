<h2><%= @task.title %></h2>
<p>Details: <%= @task.details %></p>
<% if @task.completed == true %>
<p>This task is completed</p>
<% else %>
<p>This task is not yet completed</p>
<% end %>


<%= link_to "Back to list", tasks_path %>
<%= link_to "Update this task", edit_task_path %>
<%= link_to "Delete this task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
